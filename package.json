{
  "name": "@gravity-ui/yagr",
  "version": "2.2.4",
  "description": "High level wrapper for uPlot",
  "keywords": [
    "canvas",
    "chart",
    "graph",
    "plot",
    "visualization"
  ],
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "typings"
  ],
  "authors": [
    "Trdat Mkrtchian <zeffirsky@yandex-team.ru>",
    "Artem Luchin <kloof@yandex-team.ru>"
  ],
  "repository": "git@github.com:gravity-ui/yagr.git",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "test": "TZ=UTC jest --coverage",
    "lint": "eslint src tests --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc -p tsconfig.json",
    "prebuild": "rimraf dist",
    "copy:scss": "copyfiles -u 1 \"./src/**/*.scss\" dist",
    "build:tsc": "tsc -p tsconfig.json && npm run copy:scss",
    "build": "rm -rf dist && npm run build:tsc && rollup -c rollup.config.ts",
    "start": "rollup -c rollup.config.ts -w",
    "precommit": "lint-staged",
    "docs": "yfm -i ./docs -o ./dist/docs --allowHTML",
    "prepublishOnly": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test"
    }
  },
  "lint-staged": {
    "./{src}/**/*.{ts, tsx, js, jsx}": [
      "eslint --quiet"
    ]
  },
  "devDependencies": {
    "@doc-tools/docs": "^1.13.1",
    "@types/jest": "^26.0.24",
    "@types/node": "^10.11.0",
    "@types/react": "^17.0.2",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "babel-eslint": "^10.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.21.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-react": "^7.23.1",
    "husky": "^1.0.1",
    "jest": "^26.6.3",
    "lint-staged": "^8.0.0",
    "monaco-editor": "^0.23.0",
    "node-sass": "^7.0.1",
    "prettier": "^2.3.0",
    "react": "^17.0.1",
    "rimraf": "^2.6.2",
    "rollup": "^2.70.1",
    "rollup-plugin-commonjs": "^9.1.8",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-scss": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.18.0",
    "ts-jest": "^26.5.4",
    "ts-node": "^10.2.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "uplot": "1.6.19"
  }
}
